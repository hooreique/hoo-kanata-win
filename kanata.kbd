(defalias
  my_z (tap-hold-release-timeout 200 400 z lctl z)
  my_/ (tap-hold-release-timeout 200 400 / lctl /))

(defalias
  my_lsft (tap-hold-press-timeout 200 400 f21 lsft lsft)
  my_ralt (tap-hold-press-timeout 200 400 f22 ralt ralt)
  my_rsft (tap-hold-press-timeout 200 400 f23 rsft rsft)
  my_rmet (tap-hold-press-timeout 200 400 f24 rmet rmet)
  my_rctl (tap-hold-press-timeout 200 400 del rctl rctl))

(defalias
  my_caps (tap-hold-press 200 400 esc (layer-while-held mod))
  my_spc (tap-hold-press-timeout 200 400 spc (layer-while-held mod) spc))

(defalias
  w_up (🖱☸↑ 50 120)
  w_dn (🖱☸↓ 50 120)
  w_lft (🖱☸← 50 120)
  w_rght (🖱☸→ 50 120))

